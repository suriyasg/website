<style>
	@font-face {
		font-family: "Poppins Regular";
		src: url("src/components/HeaderContactIcon.astro") format("tff");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	* {
		font-family: "Poppins Regular", sans-serif;
	}
	img {
		height: 100px;
		width: 100px;
		margin-top: 200px;
	}
	h1,
	h2 {
		text-align: center;
	}
	p {
		max-width: 50ch;
		margin: 0;
		margin-top: 10px;
	}
	body {
		background-color: rgb(237, 203, 251);
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.pastpaper {
		text-align: center;
		font-size: 28px;
	}
	.button {
		font-size: 28px;
		padding: 15px;
		border-radius: 10px;
		background-color: rgb(188, 135, 206);
	}
	.button:hover {
		background-color: rgb(192, 92, 239);
		cursor: pointer;
	}

	.icon-container {
		margin-top: 20px;
	}
</style>

<style>
	button:hover i {
		@apply translate-x-[16px];
	}
	.btn {
		@apply text-white w-fit px-5 py-3 text-[1em];
		background: linear-gradient(135deg, #852d91, #312a6c);
		transition: all 0.3s cubic-bezier(0.02, 0.01, 0.47, 1);
		font-weight: bold;
		border: 0;
		outline-color: hsl(243, 31%, 60%);
		outline-width: 2px;
		border-radius: 0.5rem;
		cursor: pointer;
	}
	.btn:hover {
		color: #cfcece;
		border: none;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
		animation: rotate 0.7s ease-in-out both;
	}

	.btn:hover:before,
	.btn:hover:after {
		opacity: 0.15;
	}
	.btn:hover:before {
		transform: translate3d(50%, 0, 0) scale(0.9);
	}
	.btn:hover:after {
		transform: translate(50%, 0) scale(1.1);
	}
	@keyframes rotate {
		0% {
			transform: rotate(0deg);
		}
		25% {
			transform: rotate(3deg);
		}
		50% {
			transform: rotate(-3deg);
		}
		75% {
			transform: rotate(1deg);
		}
		100% {
			transform: rotate(0deg);
		}
	}
	.lineUp {
		animation: 3s anim-lineUp ease-out;
	}
	@keyframes anim-lineUp {
		0% {
			opacity: 0;
			transform: translateY(80%);
		}
		20% {
			opacity: 0;
		}
		50% {
			opacity: 1;
			transform: translateY(0%);
		}
		100% {
			opacity: 1;
			transform: translateY(0%);
		}
	}
	.btn > * {
		@apply inline-block align-middle h-fit;
	}
</style>
