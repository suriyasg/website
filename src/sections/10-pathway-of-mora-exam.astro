---
import PathwayCard from "../components/PathwayCard.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const t = useTranslations(getLangFromUrl(Astro.url));
---

<section class="mx-auto">
	<h1 class="mt-10 mb-8 text-center">{t("pathway__title")}</h1>

	<div class="cols flex flex-wrap items-center justify-center gap-3">
		<PathwayCard
			title={t("pathway__card1_title")}
			year="2007"
			description={t("pathway__card1_para")}
		/>
		<PathwayCard
			title={t("pathway__card2_title")}
			year="2010"
			description={t("pathway__card2_para")}
		/>
		<PathwayCard
			title={t("pathway__card3_title")}
			year="2016"
			description={t("pathway__card3_para")}
		/>

		<PathwayCard
			title={t("pathway__card4_title")}
			year="2023"
			description={t("pathway__card4_para")}
		/>
	</div>
</section>

